{
    "name": "Device Tracker",
    "version": "0.9.2.1",
    "slug": "device_tracker",
    "description": "Track when devices connect to your network and get notifications",
    "url": "https://github.com/Smekl/Device-Tracker",
    "arch": ["amd64", "armv7"],
    "startup": "application",
    "boot": "auto",
    "options": {
        "entities": [{
            "entity": "device_tracker.placeholder",
            "name": "Friendly Name",
            "mac": "aa:bb:cc:11:22:33"
        }],
        "timeout": 5,
        "absence_timeout": 180,
        "debug": false
    },
    "schema": {
        "entities": [
            {
                "entity": "str",
                "name": "str",
                "mac": "str"
            }
        ],
        "timeout": "int",
        "absence_timeout": "int",
        "debug": "bool"
    },
    "host_network": true,
    "ingress": true,
    "homeassistant_api": true,
    "init":false,
    "map": ["ssl:ro"]
}
